{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:8888",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "manga-yon-tauri",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "assetScope": ["**/*"],
        "asset": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "haoyuanlord.net",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "manga-yon-tauri",
        "width": 800,
        "height": 600
      }
    ]
  }
}
